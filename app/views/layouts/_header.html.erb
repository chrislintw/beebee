<header>
  <nav class="navbar navbar-expand-lg navbar-dark ">
    <div class="container">
      <%= link_to 'BeeBee', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#beeNavbars" aria-controls="beeNavbars" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="beeNavbars">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item ">
            <%= link_to '首 頁', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item ">
            <%= link_to '產品列表', products_path, class: 'nav-link' %>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item ">
            <%= link_to '個人資訊', profile_path, class: 'nav-link' %> 
          </li>

          <% if current_user.admin %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                管理後台
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to '首頁', admin_root_path, class: 'dropdown-item' %> 
                <%= link_to '產品管理', admin_products_path, class: 'dropdown-item' %>
                <%= link_to '用戶管理', admin_users_path, class: 'dropdown-item' %>
              </div>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to '登出', destroy_user_session_path, class: 'nav-link', method: :delete %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to '登入', new_user_session_path, class: 'nav-link' %>
          </li>
          <% end %>
        </ul>
        <%= form_tag products_path, method: :get do %>
          <%= text_field_tag :q, nil,class: 'form-control', placeholder: 'Search' %>
        <% end %>
      </div>
    </div>
  </nav>
</header>